<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <color name="custom_theme_color">#FFFFFF</color>
    <color name="font_color">#FFFFFF</color>

    <style name="PopupDialog" parent="@android:style/Theme.Translucent.NoTitleBar"></style>

    <style name="MyDialogTheme" parent="android:Theme.Dialog">
        <item name="android:background">#ffdddddd</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light" />

    <style name="ApplicationStyle" parent="android:Theme.Holo.Light">
        <item name="android:button">@style/CKButton</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="icddrb_search_edittext">
        <item name="android:drawableLeft">@drawable/ic_action_search_black</item>
        <item name="android:padding">0dp</item>
        <item name="android:paddingRight">50dp</item>
        <item name="android:background">@drawable/edittext_search_round</item>
        <item name="android:layout_height">20dp</item>
    </style>

    <style name="CustomTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/form_background_color</item>
        <item name="android:colorBackground">@color/form_background_color</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:icon">@android:color/transparent</item>
        <item name="windowActionBar">false</item>
        <!--<item name="android:editTextStyle">@style/customEdit</item>-->
        <!--<item name="android:spinnerStyle">@style/SpinnerStyle</item>-->
        <!--<item name="android:spinnerItemStyle">@style/SpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItem</item>-->
        <item name="android:spinnerDropDownItemStyle">@style/icddrb_SpinnerItem</item>
    </style>

    <style name="CustomThemeActivity" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@color/form_background_color</item>
        <item name="android:colorBackground">@color/custom_theme_color</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
    </style>

    <style name="SpinnerItem">
        <item name="android:textColor">#000000</item>
        <item name="android:background">#F3F3F3</item>
        <item name="android:paddingTop">5sp</item>
        <item name="android:paddingLeft">5sp</item>
        <item name="android:paddingBottom">5sp</item>
    </style>

    <style name="SpinnerDropDownItem">
        <item name="android:textColor">#006699</item>
        <item name="android:background">@drawable/edittext_round</item>
    </style>

    <style name="MyDropDownNav" parent="android:style/Theme.Holo.Light">
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">#F3F3F3</item>
    </style>

    <style name="TBoxStyle" parent="@android:style/Widget.EditText">
        <item name="android:textColor">#6699CC</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5sp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CKButton" parent="android:style/Widget.Button">
        <item name="android:textSize">19sp</item>
        <item name="android:layout_margin">0dip</item>
        <item name="android:width">400sp</item>
        <item name="android:background">#ff0000</item>
    </style>

    <style name="rowStyle0">
        <item name="android:paddingTop">10sp</item>
        <item name="android:paddingBottom">10sp</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:paddingRight">10sp</item>
        <item name="android:paddingLeft">10sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="rowStyle1">
        <item name="android:paddingTop">10sp</item>
        <item name="android:paddingBottom">10sp</item>
        <item name="android:background">#C2E0EC</item>
        <item name="android:paddingRight">10sp</item>
        <item name="android:paddingLeft">10sp</item>
    </style>

    <style name="rowHeading">
        <item name="android:layout_marginTop">0sp</item>
        <item name="android:paddingTop">20sp</item>
        <item name="android:paddingBottom">10sp</item>
        <item name="android:background">@color/color_white</item>
        <item name="android:textColor">@color/theme_color</item>
        <item name="android:paddingRight">10sp</item>
        <item name="android:paddingLeft">10sp</item>
    </style>

    <style name="rowTitleBar">
        <item name="android:background">#00B7FB</item>
        <item name="android:textColor">#000000</item>
        <item name="android:paddingRight">10sp</item>
        <item name="android:paddingLeft">0sp</item>
    </style>

    <style name="customEdit">
        <!-- <item name="android:typeface">serif</item>  -->
        <item name="android:textSize">16sp</item>
        <!-- <item name="android:textStyle">bold</item> -->
        <item name="android:background">@drawable/edittext_round</item>
        <item name="android:padding">4sp</item>
    </style>

    <style name="customEditGridMenu">
        <!-- <item name="android:typeface">serif</item>  -->
        <item name="android:textSize">16sp</item>
        <!-- <item name="android:textStyle">bold</item> -->
        <item name="android:background">@drawable/edittext_round</item>
        <item name="android:colorBackground">#D7D7D7</item>
        <item name="android:padding">4sp</item>
    </style>

    <style name="EditTextHoloDark" parent="android:style/Widget.EditText">
        <item name="android:background">@drawable/customedittext</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="CustomDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:bottomBright">#fff</item>
        <item name="android:bottomDark">#fff</item>
        <item name="android:bottomMedium">#fff</item>
        <item name="android:centerBright">#fff</item>
        <item name="android:centerDark">#fff</item>
        <item name="android:centerMedium">#fff</item>
        <item name="android:fullBright">#7D266A</item>
        <item name="android:fullDark">#7D266A</item>
        <item name="android:topBright">#2f6699</item>
        <item name="android:topDark">#2f6699</item>
    </style>

    <style name="spinner_style">
        <!--<item name="android:background">@drawable/gradient_spinner</item>-->
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:popupBackground">#DFFFFFFF</item>
    </style>


    <!--MainMenu-->
    <style name="menuButtonStyle">
        <item name="android:layout_height">60sp</item>
    </style>

    <style name="CustomTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="CustomTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!-- Button Style -->


    <style name="ActionBar" parent="Theme.AppCompat">
        <item name="android:background">@color/theme_color</item>
        <item name="android:titleTextStyle">@style/ActionBar.TitleTextStyle</item>
    </style>

    <style name="ActionBar.TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#FFFFFF</item>
    </style>


    <style name="splashScreenTheme" parent="@android:style/Theme.DeviceDefault.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/logo</item>
    </style>

    <style name="icdrb_CustomTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/form_background_color</item>
        <item name="android:colorBackground">@color/custom_theme_color</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:spinnerDropDownItemStyle">@style/icddrb_SpinnerItem</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="icddrb_SpinnerStyle" parent="Base.Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textColor">#000000</item>
        <item name="android:background">@drawable/icddrb_spinneritem</item>
        <item name="android:paddingTop">0sp</item>
        <item name="android:paddingLeft">5sp</item>
        <item name="android:paddingBottom">0sp</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="icddrb_SpinnerItem" parent="Base.Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textColor">#000000</item>
        <item name="android:background">@drawable/icddrb_spinneritem</item>
        <item name="android:paddingTop">5sp</item>
        <item name="android:paddingLeft">5sp</item>
        <item name="android:paddingBottom">5sp</item>
        <item name="android:paddingRight">3dp</item>
        <item name="android:textSize">18dp</item>
    </style>

</resources>